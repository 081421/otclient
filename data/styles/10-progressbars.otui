ProgressBar < UIProgressBar
  height: 16
  background-color: red
  border: 1 black
  image-source: /images/ui/progressbar
  image-border: 1
  font: verdana-11px-rounded
  text-offset: 0 2
  on: true

  $!on:
    visible: false
    margin-top: 0
    margin-bottom: 0
    height: 0

ProgressRect < UIProgressRect
  anchors.fill: parent
  phantom: true
  color: white
  background-color: #00000088
  font: verdana-11px-rounded

Button < UIButton
  font: verdana-11px-antialised
  background-color: white
  color: #f0ad4dff
  size: 106 24
  text-translate: 0 0
  border-image:
    source: /core_ui/images/button.png
    border: 5

  state.hover:
    border-image:
      source: /core_ui/images/button_hover.png
      border: 5

  state.pressed:
    text-translate: 1 1
    border-image:
      source: /core_ui/images/button_down.png
      border: 5

  state.disabled:
    color: #999999
    background-color: #ffffff88

Button < UIButton
  font: helvetica-11px-bold
  font-color: #f0ad4dff
  size: 106 24
  border-image:
    source: /core_ui/images/button.png
    border: 5

  state.hover:
    border-image:
      source: /core_ui/images/button_hover.png
      border: 5

  state.down:
    text-translate: 1 1
    border-image:
      source: /core_ui/images/button_down.png
      border: 5


Module
  name: mainmenu
  description: Create the game main menu
  author: OTClient team
  website: https://github.com/edubart/otclient
  version: 0.2
  autoLoad: true
  dependencies:
    - core
    - topmenu

  onLoad: |
    require 'mainmenu'
    require 'entergame'
    require 'characterlist'

    if not initialized then
      MainMenu.create()
      EnterGame.show()
      initialized = true
    end
    return true

  onUnload: |
    MainMenu.destroy()
    initialized = false


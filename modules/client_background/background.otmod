Module
  name: client_background
  description: Handles the background of the login screen
  author: OTClient team
  website: https://github.com/edubart/otclient
  reloadable: true

  dependencies:
    - client_topmenu

  @onLoad: |
    dofile 'background'
    Background.init()

  @onUnload: |
    Background.terminate()

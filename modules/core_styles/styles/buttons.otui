Button < UIButton
  font: verdana-11px-antialised
  background-color: white
  color: #f0ad4dff
  size: 106 24
  text-translate: 0 0

  border-image:
    source: /core_styles/images/button.png
    border: 5

  $hover:
    border-image:
      source: /core_styles/images/button_hover.png
      border: 5

  $pressed:
    text-translate: 1 1
    border-image:
      source: /core_styles/images/button_down.png
      border: 5

  $disabled:
    color: #f0ad4d88
    background-color: #ffffff88

